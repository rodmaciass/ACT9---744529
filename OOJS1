class Forma {
  constructor(nombre, lados, longitudLado) {
    this.nombre = nombre;
    this.lados = lados;
    this.longitudLado = longitudLado;
  }

  calcularPerimetro() {
    const perimetro = this.lados * this.longitudLado;
    console.log(`El perímetro del ${this.nombre} es ${perimetro}`);
  }
}

const cuadrado = new Forma("cuadrado", 4, 5);
cuadrado.calcularPerimetro(); // Esto mostrará "El perímetro del cuadrado es 20" en la consola

const triangulo = new Forma("triángulo", 3, 3);
triangulo.calcularPerimetro(); // Esto mostrará "El perímetro del triángulo es 9" en la consola
